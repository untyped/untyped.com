---
import Footer from "@components/Footer.astro";
import UnderscorePromo from "@components/UnderscorePromo.astro";
---

<html id="home" lang="en">
  <head>
    <title>Untyped</title>

    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />

    <link rel="stylesheet" type="text/css" href="/styles/screen.css" />
  </head>

  <body>
    <header id="top">
      <div class="container">
        <div class="row">
          <div class="span7">
            <div class="overlay title">
              <a href="/">
                <h1>
                  <img src="/styles/images/untyped-logo.png" alt="Untyped" />
                </h1>
                We create great software.
              </a>
            </div>

            <div class="overlay about">
              <a href="#underscore">Browse our portfolio,</a>
              <a href="/untyping">read our weblog,</a>
              and <a href="#contact">get in touch</a> to work with us.
              <!--
          We are a team of software developers specialising in
          <em>web applications</em>, <em>machine learning</em>, and
          <em>data mining</em>.
          -->
            </div>
          </div>
        </div>
      </div>

      <div class="shadow bottom"></div>
    </header>

    <div id="navbar-wrapper">
      <nav id="navbar" class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <ul class="nav">
              <li><a href="/#top">Home</a></li>
              <li><a href="/untyping">Weblog</a></li>
              <li><a href="#contact">Contact</a></li>
            </ul>
          </div>
        </div>
      </nav>
    </div>



    <Footer title="Stay in touch!" />

    <script
      src="http://www.google-analytics.com/urchin.js"
      type="text/javascript"></script>
    <script type="text/javascript">
      _uacct = "UA-183641-1";
      urchinTracker();
    </script>
    <script is:inline src="//code.jquery.com/jquery-1.8.0.min.js"></script>
    <script is:inline src="/scripts/untyped.js"></script>
  </body>
</html>
